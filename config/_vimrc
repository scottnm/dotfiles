" use LF line endings by default
set fileformat=unix
set fileformats=unix,dos

" Journal
autocmd VimEnter *.jf call EnterJournal()
function EnterJournal()
    set syn=markdown
    syntax sync fromstart
    normal G
endfunction

function NewJournalEntry()
    call EnterJournal()
    $pu=''
    $pu=strftime('[ %a %d %b %y - %X ]')
    normal o
    startinsert!
endfunction

